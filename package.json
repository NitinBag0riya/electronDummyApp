{
  "name": "electron-fullscreen-app",
  "version": "1.0.0",
  "description": "Electron app that loads an external webpage in fullscreen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.OneApp",
    "productName": "OneApp",
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  }
}
